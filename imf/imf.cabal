name:                imf
version:             0.7.0
synopsis:            Utilities for working with email messages
homepage:            https://github.com/b0d0nne11/imf
bug-reports:         https://github.com/b0d0nne11/imf/issues
license:             OtherLicense
license-file:        LICENSE
author:              Brendan O'Donnell
maintainer:          brendan@odonnell.xyz
copyright:           Copyright (c) 2017-2021, Brendan O'Donnell
category:            Data
build-type:          Simple
cabal-version:       >= 1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.IMF
                     , Data.IMF.Header
                     , Data.IMF.Mailbox
                     , Data.IMF.Message
                     , Data.IMF.MessageId
                     , Data.IMF.Time
                     , Data.IMF.Types
  build-depends:       base >= 4.14 && < 5
                     , random
                     , text
                     , time
  ghc-options:
  default-language:    Haskell2010

test-suite imf-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             test.hs
  other-modules:
  build-depends:       base
                     , imf
                     , tasty
                     , tasty-hunit
                     , text
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/b0d0nne11/imf
